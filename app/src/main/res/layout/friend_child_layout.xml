<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_height="match_parent">

   <de.hdodenhof.circleimageview.CircleImageView
       android:layout_alignParentLeft="true"
       android:id="@+id/circleImageView"
       android:layout_width="45dp"
       android:layout_height="45dp"
       android:layout_marginLeft="5dp"
       android:layout_marginRight="5dp"
       android:layout_marginTop="10dp"
       android:src="@drawable/head" />
   <LinearLayout
       android:layout_toRightOf="@id/circleImageView"
       android:orientation="vertical"
       android:layout_marginTop="15dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
      <TextView
          android:id="@+id/tv_child_user"
          android:text="Linda"
          android:textSize="@dimen/minFontSize"
          android:textColor="@color/GroupChildUser"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
      <TextView
          android:id="@+id/tv_child_msg"
          android:text="今天天气真好"
          android:layout_marginTop="5dp"
          android:textColor="@color/GroupChildUser"
          android:textSize="@dimen/sminFontSize"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
   </LinearLayout>
</RelativeLayout>